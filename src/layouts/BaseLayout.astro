---
import { SEO } from 'astro-seo';
import Navigation from '../components/Navigation';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Lumen — Astro starter', description = 'A contemporary Astro starter that keeps navigation interactive with an island-first design.' } = Astro.props as Props;
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const absoluteImage = Astro.site ? new URL('/og-image.svg', Astro.site).toString() : '/og-image.svg';
const seoTitle = title;
const seoDescription = description;
---
<!doctype html>
<html lang="en" id="top">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SEO
      title={seoTitle}
      description={seoDescription}
      canonical={canonical}
      openGraph={{
        basic: {
          title: `${seoTitle} — Lumen`,
          type: 'website',
          image: absoluteImage,
          url: canonical,
        },
        optional: {
          siteName: 'Lumen',
          description: seoDescription,
        },
        image: {
          alt: 'Preview of the Lumen Astro starter.',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        title: `${seoTitle} — Lumen`,
        description: seoDescription,
        image: absoluteImage,
        imageAlt: 'Preview of the Lumen Astro starter.',
      }}
      extend={{
        link: [{ rel: 'icon', type: 'image/svg+xml', href: '/favicon.svg' }],
      }}
    />
  </head>
  <body>
    <Navigation client:load />
    <main class="page container">
      <slot />
    </main>
    <footer class="footer container">
      <div>
        <p class="eyebrow">Lumen</p>
        <p class="muted">Designed with Astro 5, ready for your next launch.</p>
      </div>
      <div class="footer__links">
        <a href="#about">About</a>
        <a href="#features">Features</a>
        <a href="#insights">Insights</a>
      </div>
    </footer>
  </body>
</html>
