---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CitationBlock from "../../components/CitationBlock.astro";
import PageIntro from "../../components/PageIntro.astro";
import ScholarlyMeta from "../../components/ScholarlyMeta.astro";
import SectionBlock from "../../components/SectionBlock.astro";

const pageTitle = "STD-01 rights → validators → mechanisms matrix";
const pageDescription =
  "A printable matrix mapping STD-01 rights to validators and mechanism references.";
const permalink = "/standards/std-01-rights-matrix";
const anchorLinks = [
  { href: "#matrix", label: "Matrix" },
  { href: "#references", label: "Reference links" },
  { href: "#citations", label: "Citations" },
];

const publication = {
  authors: [
    {
      name: "Ethotechnics Standards Office",
      affiliation: "Ethotechnics Institute",
      email: "standards@ethotechnics.org",
    },
  ],
  contact: "standards@ethotechnics.org",
  published: "2026-02-15T00:00:00Z",
  updated: "2026-02-15T00:00:00Z",
  version: "v1.0.0",
  doi: "Pending Zenodo deposit",
  archiveUrl: `https://web.archive.org/save/https://ethotechnics.org${permalink}`,
  changelog: [
    {
      version: "v1.0.0",
      date: "2026-02-15",
      summary:
        "Published the STD-01 crosswalk from rights to validators and mechanisms.",
    },
  ],
  license: {
    label: "CC BY 4.0",
    href: "https://creativecommons.org/licenses/by/4.0/",
  },
  attribution:
    "Credit Ethotechnics Institute Standards Office, include page title + version, and link to the canonical permalink.",
};

const matrixRows = [
  {
    right: "Stoppability",
    clauses: ["§1.1", "§1.2", "§1.3"],
    validators: [
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
      { label: "VAL-01 Burden Modeler", href: "/validators/burden-modeler" },
    ],
    mechanisms: [
      {
        label: "MEC-05 Kill switch for runaway automation",
        href: "/mechanisms/patterns/kill-switch",
      },
      {
        label: "MEC-01 Decision log",
        href: "/mechanisms/patterns/decision-log",
      },
    ],
  },
  {
    right: "Exit (Resignation)",
    clauses: ["§2.1", "§2.2", "§2.3"],
    validators: [
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
      { label: "VAL-01 Burden Modeler", href: "/validators/burden-modeler" },
    ],
    mechanisms: [
      {
        label: "MEC-02 Progressive consent",
        href: "/mechanisms/patterns/progressive-consent",
      },
      {
        label: "MEC-01 Decision log",
        href: "/mechanisms/patterns/decision-log",
      },
    ],
  },
  {
    right: "Bounded duration",
    clauses: ["§3.1", "§3.2", "§3.3"],
    validators: [
      { label: "VAL-03 Latency Audit", href: "/validators/latency-audit" },
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
    ],
    mechanisms: [
      { label: "MEC-04 The Hard Clock", href: "/mechanisms/mec-04-hard-clock" },
      {
        label: "MEC-03 Maintenance windowing",
        href: "/mechanisms/patterns/maintenance-windowing",
      },
    ],
  },
  {
    right: "Reversibility",
    clauses: ["§4.1", "§4.2"],
    validators: [
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
      { label: "VAL-01 Burden Modeler", href: "/validators/burden-modeler" },
    ],
    mechanisms: [
      {
        label: "MEC-02 Progressive consent",
        href: "/mechanisms/patterns/progressive-consent",
      },
      {
        label: "MEC-01 Decision log",
        href: "/mechanisms/patterns/decision-log",
      },
    ],
  },
  {
    right: "Non-coercive waiting",
    clauses: ["§5.1", "§5.2", "§5.3"],
    validators: [
      { label: "VAL-03 Latency Audit", href: "/validators/latency-audit" },
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
    ],
    mechanisms: [
      { label: "MEC-04 The Hard Clock", href: "/mechanisms/mec-04-hard-clock" },
      {
        label: "MEC-03 Maintenance windowing",
        href: "/mechanisms/patterns/maintenance-windowing",
      },
    ],
  },
  {
    right: "Human override",
    clauses: ["§6.1", "§6.2"],
    validators: [
      { label: "VAL-03 Latency Audit", href: "/validators/latency-audit" },
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
    ],
    mechanisms: [
      {
        label: "MEC-06 Appeal paths inside the UI",
        href: "/mechanisms/patterns/appeal-paths",
      },
      {
        label: "MEC-01 Decision log",
        href: "/mechanisms/patterns/decision-log",
      },
    ],
  },
  {
    right: "Transparent burden",
    clauses: ["§7.1", "§7.2"],
    validators: [
      { label: "VAL-01 Burden Modeler", href: "/validators/burden-modeler" },
      { label: "VAL-02 Risk Radar", href: "/validators/risk-radar" },
    ],
    mechanisms: [
      {
        label: "MEC-01 Decision log",
        href: "/mechanisms/patterns/decision-log",
      },
      {
        label: "MEC-02 Progressive consent",
        href: "/mechanisms/patterns/progressive-consent",
      },
    ],
  },
];
---

<BaseLayout
  title={`${pageTitle} — STD-01`}
  description={pageDescription}
  mainClass="page page--wide"
>
  <PageIntro
    eyebrow="STD-01 reference"
    title={pageTitle}
    description={pageDescription}
    permalink={permalink}
    anchorLinks={anchorLinks}
    panelCopy={{
      eyebrow: "Cross-reference",
      title: "Move from rights to remediation fast.",
      description:
        "Use this matrix to pick validators and mechanism language without rereading the full standard.",
      link: {
        label: "Read STD-01",
        href: "/standards/std-01-temporal-rights",
      },
    }}
  />

  <ScholarlyMeta publication={publication} permalink={permalink} />

  <SectionBlock
    id="matrix"
    eyebrow="Matrix"
    title="Rights → validators → mechanisms."
    description="Each row points to the validator and mechanism references used to operationalize the right."
    variant="alt"
  >
    <div class="mapping-table__wrapper">
      <table class="mapping-table">
        <thead>
          <tr>
            <th>Right (STD-01)</th>
            <th>Validator references</th>
            <th>Mechanism references</th>
          </tr>
        </thead>
        <tbody>
          {matrixRows.map((row) => (
            <tr>
              <td>
                <div>{row.right}</div>
                <div class="muted small">{row.clauses.join(" · ")}</div>
              </td>
              <td>
                <ul>
                  {row.validators.map((validator) => (
                    <li>
                      <a href={validator.href}>{validator.label}</a>
                    </li>
                  ))}
                </ul>
              </td>
              <td>
                <ul>
                  {row.mechanisms.map((mechanism) => (
                    <li>
                      <a href={mechanism.href}>{mechanism.label}</a>
                    </li>
                  ))}
                </ul>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </SectionBlock>

  <SectionBlock
    id="references"
    eyebrow="Reference links"
    title="Validator and mechanism anchors."
    description="Use these links for fast navigation or print-ready appendices."
  >
    <div class="reference-grid">
      <div>
        <p class="eyebrow">Standard</p>
        <ul>
          <li>
            <a href="/standards/std-01-temporal-rights">STD-01 — The Temporal Bill of Rights</a>
          </li>
        </ul>
      </div>
      <div>
        <p class="eyebrow">Validators</p>
        <ul>
          <li><a href="/validators/burden-modeler">Burden Modeler</a></li>
          <li><a href="/validators/risk-radar">Risk Radar</a></li>
          <li><a href="/validators/latency-audit">Latency Audit</a></li>
        </ul>
      </div>
      <div>
        <p class="eyebrow">Mechanisms</p>
        <ul>
          <li><a href="/mechanisms/mec-04-hard-clock">MEC-04 — The Hard Clock</a></li>
          <li><a href="/mechanisms/patterns/appeal-paths">MEC-06 — Appeal paths inside the UI</a></li>
          <li><a href="/mechanisms/patterns/kill-switch">MEC-05 — Kill switch for runaway automation</a></li>
          <li><a href="/mechanisms/patterns/decision-log">MEC-01 — Decision log</a></li>
          <li><a href="/mechanisms/patterns/progressive-consent">MEC-02 — Progressive consent</a></li>
          <li>
            <a href="/mechanisms/patterns/maintenance-windowing">MEC-03 — Maintenance windowing</a>
          </li>
        </ul>
      </div>
    </div>
  </SectionBlock>

  <SectionBlock
    id="citations"
    eyebrow="Citations"
    title="Cite this matrix."
    description="Use the citation block for audits, procurement, or internal references."
    variant="alt"
  >
    <CitationBlock
      title={pageTitle}
      permalink={permalink}
      publication={publication}
      citationKey="std_01_rights_matrix"
      summaryLabel="Cite this matrix"
    />
  </SectionBlock>
</BaseLayout>
