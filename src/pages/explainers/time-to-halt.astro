---
import ExplainerLayout from "../../components/ExplainerLayout.astro";

const pageTitle = "What is Time-to-Halt (TTH)?";
const pageDescription =
  "Time-to-Halt (TTH) defines how quickly an automated system must stop after a halt request.";
const permalink = "/explainers/time-to-halt";

const definition = [
  "Time-to-Halt (TTH) measures the latency between a user or operator requesting a stop and the system actually halting. It turns stoppability into a measurable service-level requirement with clear thresholds.",
  "Teams use TTH to shrink the window for unwanted actions and to verify that halt controls are not merely cosmetic.",
];

const example =
  "A payments platform sets a five-second TTH target so any queued transfer stops within five seconds of a user hitting the halt control.";

const ctas = [
  {
    eyebrow: "Standard",
    title: "STD-01 â€” The Temporal Bill of Rights",
    description: "Map TTH targets to the timing obligations in Article I and Article III.",
    href: "/standards/std-01-temporal-rights",
    ctaLabel: "Read STD-01",
  },
  {
    eyebrow: "Binding",
    title: "Binding vectors",
    description: "Operationalize TTH targets in procurement and release gate checklists.",
    href: "/bindings",
    ctaLabel: "View binding vectors",
  },
  {
    eyebrow: "Evidence pack",
    title: "STD-01 evidence pack",
    description: "Use runtime logs and halt receipts to validate time-to-halt performance.",
    href: "/evidence-packs/std-01",
    ctaLabel: "Open evidence pack",
  },
];

const faqs = [
  {
    question: "What is a reasonable TTH target?",
    answer:
      "Set TTH targets based on the harm window of the action: higher-risk actions demand sub-second or single-digit second stops.",
  },
  {
    question: "How do we measure TTH in practice?",
    answer:
      "Measure from the time the halt request is issued to the moment all downstream actions cease and the receipt confirms the stop.",
  },
];
---

<ExplainerLayout
  title={pageTitle}
  description={pageDescription}
  permalink={permalink}
  glossary={{ href: "/glossary/time-to-halt", label: "Time-to-Halt (TTH)" }}
  definition={definition}
  example={example}
  ctas={ctas}
  faqs={faqs}
/>
