---
import { getEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import HomeAgents from "../components/home/HomeAgents.astro";
import HomeAudience from "../components/home/HomeAudience.astro";
import HomeDifference from "../components/home/HomeDifference.astro";
import HomeFailureModes from "../components/home/HomeFailureModes.astro";
import HomeHero from "../components/home/HomeHero.astro";
import HomeHowItWorks from "../components/home/HomeHowItWorks.astro";
import HomeLimits from "../components/home/HomeLimits.astro";
import HomeOutputs from "../components/home/HomeOutputs.astro";
import HomePurpose from "../components/home/HomePurpose.astro";
import HomeQuickstart from "../components/home/HomeQuickstart.astro";
import HomeWorkflow from "../components/home/HomeWorkflow.astro";
import SummaryCallout from "../components/SummaryCallout.astro";

const homeEntry = (await getEntry("home", "home"))!;
const { pageTitle, pageDescription } = homeEntry.data;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  mainClass="page page--wide"
>
  <HomeHero />

  <SummaryCallout
    eyebrow="Fast orientation"
    title="Start with one action, then route to the right artifact."
    description="This site is built for teams who need governance-ready outputs without a long ramp."
    takeaways={[
      "Evidence-first delivery with machine-readable, citable artifacts.",
      "Risk-aware governance that turns reviews into enforceable obligations.",
      "Human-centered systems with bounded clocks and accountable owners.",
    ]}
    relatedLinks={[
      { href: "/start-here", label: "Start here" },
      { href: "/standards", label: "Standards" },
      { href: "/diagnostics", label: "Diagnostics" },
    ]}
    jumpLinks={[
      { href: "#quickstart", label: "Quickstart" },
      { href: "#how-it-works", label: "How it works" },
      { href: "#audience", label: "Audience selector" },
    ]}
  />

  <HomeQuickstart />

  <HomeHowItWorks />

  <HomeAudience />

  <HomeOutputs />

  <HomeWorkflow />

  <HomePurpose />

  <HomeDifference />

  <HomeFailureModes />

  <HomeAgents />

  <HomeLimits />
</BaseLayout>
