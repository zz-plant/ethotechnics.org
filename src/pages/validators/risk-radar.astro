---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Risk Radar â€” Validator"
  description="Surface cumulative exposure across high-friction touchpoints."
  mainClass="page page--wide"
>
  <section class="validator">
    <header class="validator__header">
      <div>
        <p class="validator__id">VAL-02</p>
        <h1>Risk Radar</h1>
        <p class="muted">
          Snapshot exposure across touchpoints to identify where constructive denial clusters.
        </p>
      </div>
      <a class="validator__standard" href="/standards/std-01-temporal-rights">
        Linked standard: STD-01
      </a>
    </header>

    <form class="validator__form" data-validator-form>
      <label class="validator__field">
        Number of high-friction touchpoints
        <input type="number" name="touchpoints" min="0" value="3" required />
      </label>
      <label class="validator__field">
        Average wait time (minutes)
        <input type="number" name="wait" min="0" value="4" required />
      </label>
      <label class="validator__field">
        Appeal path available for every touchpoint?
        <select name="appeal">
          <option value="yes" selected>Yes</option>
          <option value="no">No</option>
        </select>
      </label>
      <button class="button primary" type="submit">Generate report card</button>
    </form>

    <div class="validator__report" data-validator-report hidden>
      <div class="validator__status" data-validator-status>
        <span class="status-pill status-pill--green">Green</span>
        <p class="validator__status-text">Risk posture within acceptable range.</p>
      </div>
      <p class="validator__recommendation">
        Fix this using <a href="/library/patterns/appeal-paths">MEC-06: Appeal Paths</a>.
      </p>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.querySelector<HTMLFormElement>(
    "[data-validator-form]"
  );
  const report = document.querySelector<HTMLElement>(
    "[data-validator-report]"
  );
  const status = document.querySelector<HTMLElement>(
    "[data-validator-status]"
  );

  const updateStatus = (
    level: "red" | "yellow" | "green",
    message: string
  ) => {
    if (!status) return;
    status.innerHTML = `<span class="status-pill status-pill--${level}">${
      level.charAt(0).toUpperCase() + level.slice(1)
    }</span><p class="validator__status-text">${message}</p>`;
  };

  form?.addEventListener("submit", (event) => {
    event.preventDefault();
    if (!form || !report) return;

    const data = new FormData(form);
    const touchpoints = Number(data.get("touchpoints"));
    const wait = Number(data.get("wait"));
    const appeal = data.get("appeal");

    if (touchpoints >= 5 || wait >= 8 || appeal === "no") {
      updateStatus("red", "High risk: constructive denial detected.");
    } else if (touchpoints >= 3 || wait >= 5) {
      updateStatus("yellow", "Medium risk: friction clusters emerging.");
    } else {
      updateStatus("green", "Low risk: exposure within bounds.");
    }

    report.removeAttribute("hidden");
    report.scrollIntoView({ behavior: "smooth", block: "start" });
  });
</script>
