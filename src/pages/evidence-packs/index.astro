---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageIntro from "../../components/PageIntro.astro";
import SectionBlock from "../../components/SectionBlock.astro";
import CardGrid from "../../components/CardGrid.astro";
import CardItem from "../../components/CardItem.astro";

const pageTitle = "Evidence packs — Ethotechnics Institute";
const pageDescription =
  "Proof-carrying compliance bundles for STD-01 and STD-02 with tiered evidence and audit guidance.";
const permalink = "/evidence-packs";

const packs = [
  {
    slug: "std-01",
    title: "STD-01 Evidence Pack",
    summary:
      "Tiered evidence for the Temporal Bill of Rights, with anti-fraud guidance and audit prompts.",
  },
  {
    slug: "std-02",
    title: "STD-02 Evidence Pack",
    summary:
      "Proof bundles for contestability, review, and remedy obligations.",
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <PageIntro
    eyebrow="Evidence packs"
    title="Evidence packs"
    description={pageDescription}
    permalink={permalink}
    anchorLinks={[
      ...packs.map((pack) => ({
        href: `#${pack.slug}`,
        label: pack.title,
      })),
      { href: "#referenced-by", label: "Referenced by" },
    ]}
    panelCopy={{
      eyebrow: "Proof-carrying compliance",
      title: "Evidence tiers that survive audits",
      description:
        "Tier 0 through Tier 2 evidence lets teams prove compliance without audit theater or vague attestations.",
    }}
  />

  <SectionBlock
    eyebrow="Evidence packs"
    title="Select the standard"
    description="Each pack includes tiered evidence, anti-fraud guidance, and auditor prompts."
  >
    <CardGrid className="grid--two">
      {packs.map((pack) => (
        <CardItem id={pack.slug} title={pack.title} description={pack.summary}>
          <a slot="footer" class="button ghost button--compact" href={`/evidence-packs/${pack.slug}`}>
            Open evidence pack
          </a>
        </CardItem>
      ))}
    </CardGrid>
  </SectionBlock>

  <SectionBlock
    id="referenced-by"
    eyebrow="Referenced by"
    title="Where evidence packs are enforced"
    description="Cross-links keep evidence packs aligned with examples, bindings, and diagnostics."
    variant="alt"
  >
    <div class="grid grid--three">
      <div class="panel">
        <p class="eyebrow">Used in examples</p>
        <ul class="muted">
          <li>
            <a href="/examples/automated-account-lock">Automated account lock</a>
          </li>
          <li>
            <a href="/examples/content-moderation-takedown">Content moderation takedown</a>
          </li>
          <li>
            <a href="/examples/irreversible-payment-compensation">
              Irreversible payment with compensation
            </a>
          </li>
        </ul>
      </div>
      <div class="panel">
        <p class="eyebrow">Required by bindings</p>
        <ul class="muted">
          <li>
            <a href="/bindings#release-gates">Release gate checklist</a>
          </li>
          <li>
            <a href="/bindings#procurement">Procurement clauses</a>
          </li>
          <li>
            <a href="/bindings#runbooks">Runbook snippets</a>
          </li>
        </ul>
      </div>
      <div class="panel">
        <p class="eyebrow">Verified by evidence packs</p>
        <ul class="muted">
          <li>
            <a href="/evidence-packs/std-01">STD-01 Evidence Pack</a>
          </li>
          <li>
            <a href="/evidence-packs/std-02">STD-02 Evidence Pack</a>
          </li>
          <li>
            <a href="/validators">Validators (VAL-01–VAL-03)</a>
          </li>
        </ul>
      </div>
    </div>
    <p class="muted">
      Search IDs: STD-01 v1.0, STD-02 v0.9, STD-01.1.1, STD-02.2.1, VAL-01, VAL-02, VAL-03.
    </p>
  </SectionBlock>
</BaseLayout>
