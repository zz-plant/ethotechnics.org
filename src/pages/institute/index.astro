---
import PageIntro from '../../components/PageIntro.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { instituteContent } from '../../content/institute';

const { pageTitle, pageDescription, permalink, mission, governance, stewards, contact } = instituteContent;
---
<BaseLayout title={pageTitle} description={pageDescription}>
  <PageIntro
    eyebrow="Institute"
    title="Institute"
    description={pageDescription}
    permalink={permalink}
    anchorLinks={[
      { href: '#mission', label: 'Mission' },
      { href: '#governance', label: 'Governance' },
      { href: '#stewards', label: 'Stewards' },
      { href: '#contact', label: 'Contact' },
    ]}
    panelCopy={{
      eyebrow: 'Studio off-ramp',
      title: 'When diagnostics flag risk, the Studio is ready.',
      description:
        'Result pages across diagnostics include a Studio off-ramp. Use the contact links below to schedule a facilitation session or escalate decisions that need a governance forum.',
    }}
  />

  <section id="mission" class="section section--alt">
    <div class="section__header">
      <p class="eyebrow">Mission</p>
      <h2>Why the institute exists.</h2>
      <p class="muted">
        A shared home for ethical technology practice across design, research, and governance.
      </p>
    </div>
    <div class="grid">
      {mission.map((item) => (
        <article class="card">
          <div class="card__glow" aria-hidden="true" />
          <p>{item}</p>
        </article>
      ))}
    </div>
  </section>

  <section id="governance" class="section">
    <div class="section__header">
      <p class="eyebrow">Governance</p>
      <h2>How decisions stay accountable.</h2>
      <p class="muted">
        Each program uses documented patterns from the Library to keep expectations clear.
      </p>
    </div>
    <div class="grid">
      {governance.map((item) => (
        <article class="card">
          <div class="card__glow" aria-hidden="true" />
          <h3>{item.title}</h3>
          <p class="muted">{item.detail}</p>
        </article>
      ))}
    </div>
  </section>

  <section id="stewards" class="section section--alt">
    <div class="section__header">
      <p class="eyebrow">Stewards</p>
      <h2>People guiding the work.</h2>
      <p class="muted">
        Reach out to the steward closest to your question or risk area.
      </p>
    </div>
    <div class="grid">
      {stewards.map((steward) => (
        <article class="card">
          <div class="card__glow" aria-hidden="true" />
          <h3>{steward.name}</h3>
          <p class="muted">{steward.role}</p>
          <p>{steward.focus}</p>
        </article>
      ))}
    </div>
  </section>

  <section id="contact" class="section">
    <div class="section__header">
      <p class="eyebrow">Contact</p>
      <h2>Get in touch.</h2>
      <p class="muted">
        Use these channels for Studio escalations, research partnerships, or general questions.
      </p>
    </div>
    <div class="grid">
      {contact.map((channel) => (
        <article class="card">
          <div class="card__glow" aria-hidden="true" />
          <h3>{channel.label}</h3>
          <p class="muted">{channel.description}</p>
          <a href={channel.href}>{channel.href}</a>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
