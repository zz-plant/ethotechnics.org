---
/**
 * Reusable section wrapper with the shared header layout.
 *
 * Props:
 * - id: Optional anchor for in-page navigation.
 * - eyebrow: Small uppercase label above the heading.
 * - title: Section heading text.
 * - description: Supporting copy displayed under the heading.
 * - variant: Toggle the alt background style ("alt" adds `section--alt`).
 * - className: Additional class names appended to the section container.
 */
interface Props {
  id?: string;
  eyebrow?: string;
  title: string;
  description?: string;
  variant?: 'default' | 'alt';
  className?: string;
}

const props = Astro.props as Props;
const { id, eyebrow, title, description, variant = 'default', className } = props;
const sectionClass = ['section', variant === 'alt' ? 'section--alt' : '', className]
  .filter(Boolean)
  .join(' ');
---
<section id={id} class={sectionClass}>
  <div class="section__header">
    {eyebrow && <p class="eyebrow">{eyebrow}</p>}
    <h2 class="section__heading">
      {id ? (
        <a class="section__anchor" href={`#${id}`}>
          {title}
          <span class="section__anchor-icon" aria-hidden="true">
            #
          </span>
        </a>
      ) : (
        title
      )}
    </h2>
    {description && <p class="muted">{description}</p>}
  </div>
  <slot />
</section>
