---
interface Props {
  eyebrow?: string;
  title: string;
  summary: string;
  bullets: string[];
  note?: string;
}

const { eyebrow, title, summary, bullets, note } = Astro.props as Props;
---
<section class="quick-signal" aria-label={title}>
  <div class="quick-signal__header">
    {eyebrow && <p class="eyebrow">{eyebrow}</p>}
    <h2>{title}</h2>
    <p class="muted">{summary}</p>
  </div>
  <div class="quick-signal__body">
    <ul class="quick-signal__list">
      {bullets.map((bullet) => (
        <li>{bullet}</li>
      ))}
    </ul>
    {note && <p class="quick-signal__note muted small">{note}</p>}
  </div>
</section>
