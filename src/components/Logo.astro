---
export interface Props {
  title?: string;
  ariaHidden?: boolean;
  class?: string;
}

const { title = 'Ethotechnics logo', ariaHidden = false, class: className } =
  Astro.props as Props;
---
<svg
  class={className}
  role="img"
  aria-label={title}
  aria-hidden={ariaHidden}
  width="64"
  height="64"
  viewBox="0 0 64 64"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <title>{title}</title>
  <circle cx="32" cy="32" r="26" fill="none" stroke="currentColor" stroke-width="2" />
  <circle
    cx="32"
    cy="32"
    r="22"
    fill="none"
    stroke="currentColor"
    stroke-width="1"
    stroke-dasharray="2 3"
  />
  <circle cx="32" cy="32" r="10" fill="none" stroke="currentColor" stroke-width="1" />
  <text
    x="32"
    y="27"
    text-anchor="middle"
    font-size="8"
    letter-spacing="0.3em"
    fill="currentColor"
    style="font-family: var(--serif);"
  >
    THE
  </text>
  <text
    x="32"
    y="38"
    text-anchor="middle"
    font-size="7"
    letter-spacing="0.2em"
    fill="currentColor"
    style="font-family: var(--serif);"
  >
    INSTITUTE
  </text>
</svg>
