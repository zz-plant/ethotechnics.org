---
export interface Props {
  title?: string;
  ariaHidden?: boolean;
  class?: string;
}

const { title = 'Ethotechnics Institute', ariaHidden = false, class: className } =
  Astro.props as Props;
---
<svg
  class={className}
  role="img"
  aria-label={title}
  aria-hidden={ariaHidden}
  viewBox="0 0 240 56"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <title>{title}</title>
  <text
    x="120"
    y="26"
    text-anchor="middle"
    font-size="22"
    letter-spacing="0.08em"
    fill="currentColor"
    font-family="var(--serif)"
    font-weight="600"
  >
    ETHOTECHNICS
  </text>
  <text
    x="120"
    y="44"
    text-anchor="middle"
    font-size="10"
    letter-spacing="0.4em"
    fill="currentColor"
    font-family="var(--serif)"
  >
    INSTITUTE
  </text>
</svg>
